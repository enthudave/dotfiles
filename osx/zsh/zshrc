# Set personal aliases, overriding those provided by oh-my-zsh libs,
# plugins, and themes. Aliases can be placed here, though oh-my-zsh
# users are encouraged to define aliases within the ZSH_CUSTOM folder.
# For a full list of active aliases, run `alias`.
#
# Example aliases
# alias zshconfig="mate ~/.zshrc"
# alias ohmyzsh="mate ~/.oh-my-zsh"
alias emc='/Applications/Emacs.app/Contents/MacOS/Emacs $@'
alias vim='nvim'
alias buco='ssh enthu@192.168.0.164'
alias xuco='ssh enthu@192.168.0.172'
alias ecd='/Applications/Eclipse.app/Contents/Eclipse/eclimd'
alias e-e='emc ~/.spacemacs'
alias e-v='nvim ~/.vimrc'
alias e-z='nvim ~/.zshrc'
alias e-ze='nvim ~/.zshenv'
alias ddsh='eval $(docker-machine env default)'
alias dms='docker-machine start'
alias purge-containers='docker rm $(docker ps -a -q)'
alias purge-images='docker rmi $(docker images | grep "^<none>" | awk "{print $3}")'
alias wrk-has='docker run -it -P -v $HOME/projects/beg-has:/home/dev/project enthudave/vim-haskell'
alias julia="exec '/Applications/Julia-0.4.6.app/Contents/Resources/julia/bin/julia'"

# part of terminfo fix for nvim's ability to remap <C-h>
export TERMINFO="$HOME/.terminfo"

# enable rvm tab completion
[[ -r $rvm_path/scripts/completion ]] && . $rvm_path/scripts/completion

# for https://github.com/junegunn/fzf
[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
